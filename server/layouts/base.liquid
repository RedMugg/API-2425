<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {% block head %}
    <title>{{ title }}</title>
  {% endblock %}
  {% if NODE_ENV == "development" %}
    <script type="module" src="http://localhost:5173/@vite/client" defer></script>
    <script type="module" src="http://localhost:5173/client/index.js" defer></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Micro+5&display=swap" rel="stylesheet">
  {% else %}
    <link rel="stylesheet" href="/index.css">
    <script src="" defer></script>
  {% endif %}
  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>

<body>
  <header>
    <a href="/" >All</a>
    <a href="/necromancy" >Necromancy</a>
    <a href="/illusion" >Illusion</a>
    <a href="/abjuration" >Abjuration</a>
    <a href="/conjuration" >Conjuration</a>
    <a href="/divination" >Divination</a>
    <a href="/enchantment" >Enchantment</a>
    <a href="/invocation" >Invocation</a>
    <a href="/transmutation" >Transmutation</a>
  </header>
  <main>
    {% block content %}{% endblock %}
  </main>
  <footer>

  </footer>
</body>
</html>
